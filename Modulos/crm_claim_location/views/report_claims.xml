<!--Custom report.-->
<openerp>
<data>
<template id="report_claims_document">
	<t t-foreach="docs" t-as="c">
	    <t t-call="report.external_layout">
                <div class="page">
                    <h2>Reclamacion: <span t-field="c.id" /></h2>
                    	<table>
				<tr>
					<td>Cliente <span t-field="c.partner" /></td>
					<td>Calle <span t-field="c.street" /> </td>
				</tr>			
			</table>					
                </div>
        </t>
    </t>
</template>

<template id="report_claims">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'crm_claim_location.report_claims_document')"/>
        </t>
    </t>
</template>

<report 
            id="custom_print_claims"
            model="crm.claim"
            string="Print Claims"
            report_type="qweb-pdf"
            name="crm_claim_location.report_claims"
            attachment_use="False"
            file="crm_claim_location.report_claims"
        />

</data>
</openerp>
