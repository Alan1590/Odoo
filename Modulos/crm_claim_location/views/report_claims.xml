<!--Custom report.-->
<openerp>
<data>
<template id="report_claims_document">
	<t t-foreach="docs" t-as="c">
	    <t t-call="report.external_layout">
                <div class="page">
                    <h4 style="text-align: center;">Reclamacion: <span t-field="c.id" /></h4>
                        <br/>
                        <table class="client" style="width:100%">
                                <thead>
                                        <tr>
                                        <td>
					<strong> Customer </strong>					
					<span t-field="c.partner_id" />
                                        <br/>
                                        <br/>
					</td> 
					<td>

                                        <strong>Street</strong>
					<span t-field="c.partner_street" /> 
                                        <br/>
                                        <br/>
					</td>
					<tr>
                                        <td>

					<strong>Telephone/Celphone</strong>
					<span t-field="c.partner_phone" />
                			</td>					
		                        <td>

					<strong>City</strong>
					<span t-field="c.partner_city" />
					</td>
					</tr>
                                        </tr>
                                </thead>
                        </table>                            						
		<div class="body">
		
			<table class="description" style="border-style: solid; width: 100%;">

				<thead>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
					<br/>
					<tr>
					<th>Description:</th>
					</tr>
					<tr>
					<td><span t-field="c.description"/></td>
				        </tr>
                                        <tr>
                                        <td>
					<br/>
                                        <br/>
                                        <br/>	
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
					</td>
                                        </tr>                                
                                                              
                                                                                                                                                                                                                                                                                                                        
				</thead>
			</table>
		</div>
		<div class="resolution">
			<table class="tbl_resolution" style="border-style: solid; width: 100%;">
			                <tr>
                                        <td>Resolution:
					<br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
					</td>
              				</tr>
			</table>
		</div>
                </div>	
        </t>
    </t>
</template>

<template id="report_claims">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'crm_claim_location.report_claims_document')"/>
        </t>
    </t>
</template>

<report 
            id="custom_print_claims"
            model="crm.claim"
            string="Print Claims"
            report_type="qweb-pdf"
            name="crm_claim_location.report_claims"
            attachment_use="False"
            file="crm_claim_location.report_claims"
        />

</data>
</openerp>
