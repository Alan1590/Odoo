
<openerp>
<data>
<template id="print_report_invoices">
	<t t-foreach="docs" t-as="report">
            <div class="page">
    			<div class="head">
                    <p><h3 style="text-align: center;"><span t-field="report.name"/></h3></p>
                    <p><h5 style="text-align: right;"><b>Date Start: </b><span t-field="report.date_start"/></h5></p>
                    <p><h5 style="text-align: right;"><b>Date End: </b><span t-field="report.date_end"/></h5></p>
                </div>    	
                <div class="body_sale">
                    <h3 align="center">FACTURAS VENTA</h3>
                    <table class="sale" col="16" style="padding: 6px; width: 100%; text-align: center;">

                        <tr>
                            <td colspan="1">Fecha Factura</td>
                            <td colspan="2">Numero Factura</td>
                            <td colspan="2">Cliente</td>
                            <td colspan="3">Cuit/Dni</td>
                            <td colspan="3">Tipo</td>                                                
                            <td colspan="3">Impuestos</td>    
                            <td colspan="1">Neto</td>
                            <td colspan="1">Total</td>
                        </tr>
                            <t t-foreach="report.invoices_id" t-as="invoices">                        
                            <t t-if="'sale' in invoices.journal_id.type">
                            <tr>
                                <td colspan="1"><span t-field="invoices.date_invoice"/></td>
                                <td colspan="2"><span t-field="invoices.number"/></td>
                                <td colspan="2"><span t-field="invoices.partner_id"/></td>
                                <td colspan="3"><span t-field="invoices.partner_id.document_number"/></td>
                                <td colspan="3"><span t-field="invoices.journal_id.type"/></td>
                                <td colspan="3"><span t-field="invoices.amount_tax" /></td>     
                                <td colspan="1"><span t-field="invoices.amount_untaxed"/></td>
                                <td colspan="1"><span t-field="invoices.amount_total"/></td>
                            </tr>
                            </t>
                            </t>
                    </table>

                </div>

                <div class="body_purchase" style="margin-top: 10%">
                    <h3 align="center">FACTURAS COMPRA</h3>
                    <table class="purchase" col="16" style="padding: 6px; width: 100%; text-align: center;">

                        <tr>
                            <td colspan="1">Fecha Factura</td>
                            <td colspan="2">Numero Factura</td>
                            <td colspan="2">Cliente</td>
                            <td colspan="3">Cuit/Dni</td>
                            <td colspan="3">Tipo</td>                                                
                            <td colspan="3">Impuestos</td>    
                            <td colspan="1">Neto</td>
                            <td colspan="1">Total</td>
                        </tr>
                            <t t-foreach="report.invoices_id" t-as="invoices">                        
                                <t t-if="'purchase' in invoices.journal_id.type">
                                    <tr>
                                        <td colspan="1"><span t-field="invoices.date_invoice"/></td>
                                        <td colspan="2"><span t-field="invoices.number"/></td>
                                        <td colspan="2"><span t-field="invoices.partner_id"/></td>
                                        <td colspan="3"><span t-field="invoices.partner_id.document_number"/></td>
                                        <td colspan="3"><span t-field="invoices.journal_id.type"/></td>
                                        <td colspan="3"><span t-field="invoices.amount_tax" /></td>     
                                        <td colspan="1"><span t-field="invoices.amount_untaxed"/></td>
                                        <td colspan="1"><span t-field="invoices.amount_total"/></td>
                                    </tr>
                                </t>
                            </t>
                    </table>
                </div>
                <div class="end_report" style="margin-top: 10%">
                        <table class="foot_report" style="padding: 6px; width: 100%; text-align: center; margin-top: 10%;">
                            <tr align="right">
                                <td><i>TOTAL IVA(27%): </i><t t-esc="report.tax_27" /></td>
                                <td><i>TOTAL IVA(21%): </i><t t-esc="report.tax_21" /></td>
                                <td><i>TOTAL IVA(10,5%): </i><t t-esc="report.tax_105" /></td>
                                <td><i>IVA FINAL: </i><t t-esc="report.amount_vat" /></td>

                            </tr>
                        </table>

                </div>
		</div>	
        </t>
</template>

<template id="report_invoices">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'report_vat_invoices.print_report_invoices')"/>
        </t>
    </t>
</template>

<report 
            id="custom_print_report_invoice"
            model="report.vat.invoices"
            string="Print Report"
            report_type="qweb-pdf"
            name="report_vat_invoices.print_report_invoices"
            attachment_use="False"
            file="report_vat_invoices.print_report_invoices"
        />

</data>
</openerp>
